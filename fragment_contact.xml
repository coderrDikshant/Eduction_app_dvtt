<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contactFragment">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="About Developers"
        android:titleTextColor="@color/black"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Content Layout -->
    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/profile_image_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Profile Image 1"
                    android:src="@drawable/hh"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_toEndOf="@id/profile_image_1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/developer_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: Developer 1"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/developer_branch_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Branch: CSE"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/developer_year_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year: 3rd Year"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/developer_instagram_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instagram: @developer1"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/developer_linkedin_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LinkedIn: linkedin.com/in/developer1"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Add more developer profiles here -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/profile_image_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Profile Image 2"
                    android:src="@drawable/ic_profile"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_toEndOf="@id/profile_image_2"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/developer_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: Developer 2"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/developer_branch_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Branch: ECE"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/developer_year_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year: 4th Year"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/developer_instagram_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instagram: @developer2"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/developer_linkedin_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LinkedIn: linkedin.com/in/developer2"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
